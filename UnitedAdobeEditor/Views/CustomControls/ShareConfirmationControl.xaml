<UserControl
    x:Class="UnitedAdobeEditor.Views.CustomControls.ShareConfirmationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UnitedAdobeEditor.Views.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock x:Name="text" TextAlignment="Center">Are you sure you want to share this config?</TextBlock>
        <local:AppSelectionItem
            x:Name="appSelectedItem"
            Margin="0,10"
            HorizontalAlignment="Center" />
        <Image x:Name="image" Width="350" />
    </StackPanel>
</UserControl>
